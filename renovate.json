{
  "reviewers": ["t-yng"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "separateMultipleMajor": false,
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "all dependencies",
      "groupSlug": "all-dependencies",
      "prBodyColumns": [
        "Package",
        "Update",
        "Change",
        "Age",
        "Adoption",
        "Confidence"
      ],
      "schedule": [
        "after 10:00 on the 6th day of the month",
        "after 10:00 on the 15th day of the month"
      ]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "all devDependencies",
      "groupSlug": "all-dev-dependencies",
      "prBodyColumns": [
        "Package",
        "Update",
        "Change",
        "Age",
        "Adoption",
        "Confidence"
      ],
      "schedule": [
        "after 10:00 on the 8th day of the month",
        "after 10:00 on the 22th day of the month"
      ]
    }
  ]
}
