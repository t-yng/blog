{
  "reviewers": ["t-yng"],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 10,
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "separateMultipleMajor": true,
  "recreateClosed": false,
  // デフォルトでは GitHub Actions なども更新対象となりPRが作成されるので npm だけに制限
  // @see: https://docs.renovatebot.com/modules/manager/
  enabledManagers: ['npm'],
  // コンフリクト発生時のみリベースする
  rebaseWhen: 'conflicted',
  // PRのアップデートは設定しているスケジュールのタイミングだけに固定
  updateNotScheduled: false,
  "prBodyColumns": [
    "Package",
    "Update",
    "Change",
    "Age",
    "Adoption",
    "Confidence"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "enabled": false,
    },
    // {
    //   "matchUpdateTypes": ["major"],
    //   "schedule": [
    //     "after 10:00 on the 1st day of the month",
    //   ]
    // },
    // {
    //   "matchUpdateTypes": ["minor", "patch"],
    //   "schedule": [
    //     "after 10:00 on the 1st day of the 3 month",
    //   ]
    // },
    {
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor patch dependencies",
      "groupSlug": "minor-patch-dependencies",
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor patch dev dependencies",
      "groupSlug": "minor-patch-dev-dependencies",
      "automerge": true,
    },
    {
      "groupName": "emotion",
      "matchPackagePatterns": ["@emotion"],
    },
    {
      "groupName": "prismjs",
      "matchPackagePatterns": ["prismjs"],
    },
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "@types/react",
        "react-dom",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint"],
      "automerge": true,
    },
    {
      "groupName": "unit-test",
      "matchPackageNames": ["jest"],
      "matchPackagePatterns": [
        "^@swc",
        "^@testing-library",
      ],
      "automerge": true,
    },
  ]
}
