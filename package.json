{
  "name": "blog",
  "description": "egineer blog of t-yng",
  "version": "2.0",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "export": "next export",
    "dev": "next dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "start": "next start",
    "bundle-analyze": "ANALYZE=true next build",
    "test": "vitest run",
    "test:diff": "yarn test --changed=origin/main",
    "test:coverage": "yarn test --coverage",
    "test:e2e": "playwright test",
    "lint:all": "eslint --ext ts,tsx ./ && yarn lint:html",
    "lint:html": "markuplint -p \"./src/**/*.tsx\"",
    "lint:fix": "eslint --fix --ext ts,tsx ./",
    "type-check": "tsc",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{tsx}": [
      "markuplint -p"
    ]
  },
  "dependencies": {
    "@highlight-run/next": "7.3.3",
    "@highlight-run/react": "3.2.1",
    "date-fns": "3.2.0",
    "gray-matter": "4.0.3",
    "highlight.run": "8.3.2",
    "next": "14.0.4",
    "prismjs": "^1.25.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@markuplint/jsx-parser": "3.12.0",
    "@markuplint/react-spec": "4.0.1",
    "@next/bundle-analyzer": "14.1.0",
    "@playwright/test": "1.41.2",
    "@swc/core": "^1.2.117",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@types/cpx": "1.5.5",
    "@types/gtag.js": "0.0.19",
    "@types/markdown-it": "13.0.7",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "@vitejs/plugin-react": "4.2.1",
    "@vitest/coverage-v8": "0.34.6",
    "cheerio": "1.0.0-rc.12",
    "cpx": "1.5.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "hygen": "6.2.11",
    "identity-obj-proxy": "3.0.0",
    "image-size": "^1.0.0",
    "jsdom": "24.0.0",
    "linaria": "6.1.0",
    "lint-staged": "15.2.2",
    "markdown-it": "14.0.0",
    "markuplint": "3.15.0",
    "next-linaria": "0.11.0",
    "prettier": "3.2.5",
    "ts-mockito": "2.6.1",
    "typescript": "5.3.3",
    "url-join": "5.0.0",
    "vitest": "1.2.2"
  }
}
