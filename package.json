{
  "name": "blog",
  "description": "egineer blog of t-yng",
  "version": "2.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build",
    "export": "next export",
    "dev": "rm -fr .next && next dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "start": "next start",
    "bundle-analyze": "ANALYZE=true next build",
    "test": "vitest run",
    "test:diff": "bun run test --changed=origin/main",
    "test:coverage": "bun run test --coverage",
    "test:e2e": "playwright test",
    "test:update-snapshots": "bun run test:e2e --update-snapshots",
    "lint:all": "eslint --ext ts,tsx ./ && bun run lint:html",
    "lint:html": "markuplint -p \"./src/**/*.tsx\"",
    "lint:fix": "eslint --fix --ext ts,tsx ./",
    "type-check": "tsc",
    "panda:codegen": "panda codegen --clean -c src/styles/panda.config.ts",
    "prepare": "husky install && bun run panda:codegen"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.tsx": [
      "markuplint -p"
    ]
  },
  "dependencies": {
    "@highlight-run/next": "7.5.18",
    "@highlight-run/react": "3.2.5",
    "date-fns": "3.6.0",
    "gray-matter": "4.0.3",
    "highlight.run": "8.13.0",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@markuplint/jsx-parser": "4.5.0",
    "@markuplint/react-spec": "4.3.0",
    "@next/bundle-analyzer": "14.1.4",
    "@pandacss/dev": "0.37.2",
    "@playwright/test": "1.43.0",
    "@shikijs/markdown-it": "1.2.4",
    "@swc/core": "^1.2.117",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.2",
    "@types/cpx": "1.5.5",
    "@types/gtag.js": "0.0.19",
    "@types/markdown-it": "14.0.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitejs/plugin-react": "4.2.1",
    "@vitest/coverage-v8": "0.34.6",
    "cheerio": "1.0.0-rc.12",
    "cpx": "1.5.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "9.0.11",
    "hygen": "6.2.11",
    "identity-obj-proxy": "3.0.0",
    "image-size": "^1.0.0",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "markdown-it": "14.1.0",
    "markuplint": "4.5.0",
    "prettier": "3.2.5",
    "ts-mockito": "2.6.1",
    "typescript": "5.4.4",
    "url-join": "5.0.0",
    "vitest": "1.4.0"
  }
}
